# =========================================
# ShopShadow Flask Detection Service
# =========================================
# Copy this file to .env and fill in actual values
# NEVER commit .env to version control!

# ---- Backend API ----
# Node.js backend URL for API communication
# Local development: http://localhost:3001
# Production: https://your-backend-domain.com
BACKEND_API_URL=http://localhost:3001

# ---- YOLO Model ----
# Path to YOLO11s model weights file
# Weights auto-download on first run to this location
# Download manually from: https://github.com/ultralytics/assets/releases
YOLO_MODEL_PATH=./models/yolo11s.pt

# ---- Camera Configuration ----
# Camera device index
# 0 = Built-in MacBook camera (for MVP testing)
# 1 = First USB camera (for Raspberry Pi)
# 2+ = Additional USB cameras
CAMERA_INDEX=0

# Camera resolution (width x height)
CAMERA_WIDTH=640
CAMERA_HEIGHT=480

# Camera FPS
CAMERA_FPS=30

# ---- Detection Configuration ----
# Confidence threshold for high/low confidence routing
# Detections >= 0.7 go to basket (auto-add)
# Detections < 0.7 go to pending-items (user approval)
CONFIDENCE_THRESHOLD=0.7

# Seconds between detection cycles
# Default: 5 seconds (matches frontend polling interval)
DETECTION_INTERVAL=5

# ---- Logging ----
# Directory for per-run log files
# Logs will be written to: LOG_FILE_PATH/shopshadow-YYYY-MM-DD-HH-mm-ss.log
LOG_FILE_PATH=./logs

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=DEBUG

# ---- Flask Server ----
# Flask server port (for health checks, debugging)
FLASK_PORT=5000

# Flask debug mode (True for development, False for production)
FLASK_DEBUG=True

# ---- Device Configuration ----
# Device name (optional - will be auto-generated if not set)
# DEVICE_NAME=RaspberryPi_Kitchen_01

# ---- Optional - Advanced Features ----
# YOLO inference device (cpu, cuda:0, mps for Mac GPU)
# Auto-detected by default
# YOLO_DEVICE=cpu

# Non-maximum suppression (NMS) threshold
# NMS_THRESHOLD=0.45

# Maximum detections per frame
# MAX_DETECTIONS=100
